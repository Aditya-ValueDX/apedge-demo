{
  "APEDGE001": {
    "schema": {
      "type": "object",
      "properties": {
        "invoiceNumber": { "type": "string" },
        "invoiceDate": { "type": "string", "format": "date" },
        "dueDate": { "type": "string", "format": "date" },
        "invoiceType": { "type": "string" },
        "paymentTerms": { "type": "string" },
        "billType": { "type": "string" },
        "businessName": { "type": "string" },
        "businessAddress": { "type": "string" },
        "gstin": { "type": "string" },
        "panNumber": { "type": "string" },
        "state": { "type": "string" },
        "stateCode": { "type": "string" },
        "contact": { "type": "string" },
        "email": { "type": "string", "format": "email" },

        "bankDetails": {
          "type": "object",
          "properties": {
            "accountNumber": { "type": "string" },
            "ifsc": { "type": "string" },
            "upi": { "type": "string" }
          }
        },

        "customer": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "billingAddress": { "type": "string" },
            "shippingAddress": { "type": "string" },
            "gstin": { "type": "string" },
            "panNumber": { "type": "string" },
            "state": { "type": "string" },
            "stateCode": { "type": "string" },
            "contact": { "type": "string" },
            "email": { "type": "string", "format": "email" }
          }
        },

        "transport": {
          "type": "object",
          "properties": {
            "transporterName": { "type": "string" },
            "vehicleNumber": { "type": "string" },
            "mode": { "type": "string" },
            "deliveryDate": { "type": "string", "format": "date" },
            "ewayBillNumber": { "type": "string" },
            "lrNumber": { "type": "string" }
          }
        },

        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "serial": { "type": "number" },
              "description": { "type": "string" },
              "hsn": { "type": "string" },
              "itemCode": { "type": "string" },
              "uom": { "type": "string" },
              "quantity": { "type": "number" },
              "rate": { "type": "number" },
              "discount": { "type": "number" },
              "taxableValue": { "type": "number" },
              "cgstRate": { "type": "number" },
              "cgstAmount": { "type": "number" },
              "sgstRate": { "type": "number" },
              "sgstAmount": { "type": "number" },
              "igstRate": { "type": "number" },
              "igstAmount": { "type": "number" },
              "total": { "type": "number" }
            }
          }
        },

        "subtotal": { "type": "number" },
        "totalDiscount": { "type": "number" },
        "totalCGST": { "type": "number" },
        "totalSGST": { "type": "number" },
        "totalIGST": { "type": "number" },
        "shippingCharges": { "type": "number" },
        "roundOff": { "type": "number" },
        "grandTotal": { "type": "number" },
        "amountInWords": { "type": "string" }
      }
    },

    "uiSchema": {
      "type": "VerticalLayout",
      "elements": [
        { "type": "Control", "scope": "#/properties/invoiceNumber" },
        { "type": "Control", "scope": "#/properties/invoiceDate" },
        { "type": "Control", "scope": "#/properties/dueDate" },
        { "type": "Control", "scope": "#/properties/invoiceType" },
        { "type": "Control", "scope": "#/properties/paymentTerms" },
        { "type": "Control", "scope": "#/properties/billType" },
        { "type": "Group", "label": "Business Details", "elements": [
          { "type": "Control", "scope": "#/properties/businessName" },
          { "type": "Control", "scope": "#/properties/businessAddress" },
          { "type": "Control", "scope": "#/properties/gstin" },
          { "type": "Control", "scope": "#/properties/panNumber" },
          { "type": "Control", "scope": "#/properties/state" },
          { "type": "Control", "scope": "#/properties/stateCode" },
          { "type": "Control", "scope": "#/properties/contact" },
          { "type": "Control", "scope": "#/properties/email" }
        ]},
        { "type": "Group", "label": "Customer", "elements": [
          { "type": "Control", "scope": "#/properties/customer/properties/name" },
          { "type": "Control", "scope": "#/properties/customer/properties/billingAddress" },
          { "type": "Control", "scope": "#/properties/customer/properties/shippingAddress" },
          { "type": "Control", "scope": "#/properties/customer/properties/gstin" },
          { "type": "Control", "scope": "#/properties/customer/properties/panNumber" },
          { "type": "Control", "scope": "#/properties/customer/properties/state" },
          { "type": "Control", "scope": "#/properties/customer/properties/stateCode" },
          { "type": "Control", "scope": "#/properties/customer/properties/contact" },
          { "type": "Control", "scope": "#/properties/customer/properties/email" }
        ]},
        { "type": "Control", "scope": "#/properties/placeOfSupply" },
        { "type": "Control", "scope": "#/properties/transport" },
        { "type": "Control", "scope": "#/properties/items" },
        { "type": "Group", "label": "Amounts", "elements": [
          { "type": "Control", "scope": "#/properties/subtotal" },
          { "type": "Control", "scope": "#/properties/totalDiscount" },
          { "type": "Control", "scope": "#/properties/totalCGST" },
          { "type": "Control", "scope": "#/properties/totalSGST" },
          { "type": "Control", "scope": "#/properties/totalIGST" },
          { "type": "Control", "scope": "#/properties/shippingCharges" },
          { "type": "Control", "scope": "#/properties/roundOff" },
          { "type": "Control", "scope": "#/properties/grandTotal" },
          { "type": "Control", "scope": "#/properties/amountInWords" }
        ]}
      ]
    }
  }
